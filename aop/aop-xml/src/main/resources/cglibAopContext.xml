<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--target object bean-->
    <bean id="target" class="pers.xiaoming.java_spring.AOPTargetNoInterface"/>

    <bean id="myMethodBeforeAdvice" class="pers.xiaoming.java_spring.MyBeforeAdvice"/>

    <!--if no interface provided, spring will use CGLIB to do the proxy-->
    <bean id="noInterfaceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="target"/>
        <!--no interface-->
        <!--<property name="interfaces" value="pers.xiaoming.java_spring.AOPTarget"/>-->
        <property name="interceptorNames" value="myMethodBeforeAdvice"/>
    </bean>
</beans>