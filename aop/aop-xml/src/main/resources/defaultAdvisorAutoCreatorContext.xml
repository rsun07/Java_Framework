<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--target object bean-->
    <bean id="target" class="pers.xiaoming.java_spring.entity.AOPTargetImpl"/>

    <!-- Before Advice config-->
    <bean id="myMethodBeforeAdvice" class="pers.xiaoming.java_spring.advice.MyBeforeAdvice"/>
    <bean id="myAfterReturningAdvice" class="pers.xiaoming.java_spring.advice.MyAfterReturningAdvice"/>
    <bean id="myMethodInterceptor" class="pers.xiaoming.java_spring.advice.MyMethodInterceptor"/>

    <!--Advisor config-->
    <bean id="beforeAdvisor" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
        <property name="advice" ref="myMethodBeforeAdvice"/>
        <property name="mappedName" value="print"/>
    </bean>

    <bean id="afterAdvisor" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
        <property name="advice" ref="myAfterReturningAdvice"/>
        <property name="mappedNames">
            <list>
                <value>toLowercase</value>
                <value>toUppercase</value>
            </list>
        </property>
    </bean>

    <bean id="methodInterceptorAdvisor" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
        <property name="advice" ref="myMethodInterceptor"/>
        <property name="mappedName" value="to*"/>
    </bean>

    <!--proxy config-->
    <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
</beans>