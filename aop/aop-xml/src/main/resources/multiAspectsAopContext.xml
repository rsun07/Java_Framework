<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--target object bean-->
    <bean id="target" class="pers.xiaoming.java_spring.AOPTargetImpl"/>

    <!-- Before Advice config-->
    <bean id="myMethodBeforeAdvice" class="pers.xiaoming.java_spring.MyBeforeAdvice"/>
    <bean id="myAfterReturningAdvice" class="pers.xiaoming.java_spring.MyAfterReturningAdvice"/>
    <bean id="myMethodInterceptor" class="pers.xiaoming.java_spring.MyMethodInterceptor"/>

    <!--Proxy config-->
    <!-- its backend is still java.lang.reflect.Proxy -->
    <bean id="multiAspectProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="target"/>
        <property name="interfaces" value="pers.xiaoming.java_spring.AOPTarget"/>
        <property name="interceptorNames">
            <list>
                <value>myMethodBeforeAdvice</value>
                <value>myAfterReturningAdvice</value>
                <value>myMethodInterceptor</value>
            </list>
        </property>
    </bean>
</beans>