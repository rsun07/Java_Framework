<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="student" class="pers.xiaoming.java_spring.di_xml_entity.Student">
        <property name="name" value="John"/>
        <property name="age" value="23"/>
        <property name="school" ref="mySchool"/>
    </bean>

    <bean id="mySchool" class="pers.xiaoming.java_spring.di_xml_entity.School">
        <constructor-arg name="name" value="MySchool"/>
        <property name="address">
            <ref bean="schoolAddress"/>
        </property>
    </bean>

    <bean id="schoolAddress" class="pers.xiaoming.java_spring.di_xml_entity.Address">
        <constructor-arg name="num" value="8888"/>
        <constructor-arg name="street" value="CA DR"/>
        <constructor-arg name="zipcode" value="12345"/>
    </bean>

</beans>