<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--Config by setter method-->
    <bean id="myBean" class="pers.xiaoming.java_spring.ioc_basic.bean_life_cycle.LifecycleBean"
        init-method="initMethod"
        destroy-method="destroyMethod">
        <property name="name" value="My Bean!"/>
    </bean>

    <bean class="pers.xiaoming.java_spring.ioc_basic.bean_life_cycle.MyBeanPostProcessor"/>
</beans>