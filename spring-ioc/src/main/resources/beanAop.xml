<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <bean id = "aopCalculator"
          class = "pers.xiaoming.java_spring.spring_basic.aop_basic.xml_aop.CalculatorAopImpl">
    </bean>

    <bean id = "loggingAspect"
          class = "pers.xiaoming.java_spring.spring_basic.aop_basic.xml_aop.LoggingAspect"/>

    <bean id = "aroundAdvice"
          class="pers.xiaoming.java_spring.spring_basic.aop_basic.xml_aop.AroundAdvice"/>

    <!--AOP config-->
    <aop:config>
       <aop:pointcut expression="execution(public int pers.xiaoming.java_spring.spring_basic.aop_basic.xml_aop.CalculatorAopImpl.*(..))"
                     id = "declareJointPointExpress"/>
        <aop:aspect ref="loggingAspect" order="1">
            <aop:before method="beforeAdvice" pointcut-ref="declareJointPointExpress"/>
            <aop:after method="afterAdvice" pointcut-ref="declareJointPointExpress"/>
            <aop:after-returning method="afterReturningAdvice" pointcut-ref="declareJointPointExpress"
                                 returning="result"/>
            <aop:after-throwing method="afterThrowingAdvice" pointcut-ref="declareJointPointExpress"
                                throwing="e"/>
            <aop:after-throwing method="afterThrowingNullpointerException" pointcut-ref="declareJointPointExpress"
                                throwing="e"/>
            <aop:after-throwing method="afterThrowingArithmeticException" pointcut-ref="declareJointPointExpress"
                                throwing="e"/>
        </aop:aspect>

        <aop:aspect ref="aroundAdvice" order="1">
            <aop:around method="aroundAdvice"
                        pointcut="execution(public double pers.xiaoming.java_spring.spring_basic.aop_basic.xml_aop.CalculatorAopImpl.divide(int, int))"/>
        </aop:aspect>
    </aop:config>


    <aop:aspectj-autoproxy/>


</beans>